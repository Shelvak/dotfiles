#!/bin/zsh


HOME=/home/rotsen
BackupDir=$HOME/Dropbox/Backups

DirInHome=(Documentos Escritorio sql .ssh rails)

echo "Cleaning up RailsProjects"
~/.dotfiles/clear_rails_apps

cd $HOME
echo `pwd`

for dir in "${DirInHome[@]}"; do
  echo $dir
  tar -c $dir | bzip2 > $BackupDir/$dir.tar.bz2
done


echo "Sincronizando música"
rsync -av Música /run/media/rotsen/Backups/Backup-RotseN
echo "Sincronizando imágenes"
rsync -av Imágenes Dropbox/Backups --exclude 'backgrounds'
echo "Sincronizando desde Dropbox"
rsync -av Dropbox /run/media/rotsen/Backups/Backup-RotseN
