# Fetch and checkout to remote branch
gfco() {
  git fetch origin $1
  git checkout origin/$1
  git checkout -b $1
}

# Search in git dir and go
cr() { cd ~/git/$1; }
_cr() { _files -W ~/git -/; }
compdef _cr cr

# Search in git dir and go in splitted window
cs() { tmux split-window -v -c ~/git/$1; }
_cs() { _files -W ~/git -/; }
compdef _cs cs

