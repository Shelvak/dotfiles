# Safe Require file
safe_source () { [ -f $1 ] && source $1 }

# run server on current dir
localserver() {
  port=8888
  if [ "$1" != "" ]; then
    port=$1
  fi

  ruby -run -e httpd . -p $port -b 0.0.0.0
}

# Sub arg1 with arg2 on current dir
sustituir() {
  egrep -rl "$1" * | xargs sed -i "s/$1/$2/g"
}

# Limpiar temporales de vim
clean_vim_temps() {
  find . -name "*.sw[o|p]" | xargs rm
}
